rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: User is authenticated and is the owner of the document path
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper: User is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId} {
      // Public Read: Allows Search and Leaderboard
      allow read: if isAuthenticated();
      
      // Write: Only owner can modify their root profile (XP, Level, Email, etc.)
      allow write: if isOwner(userId);

      // --- Subcollection: Data (Library & Gamification) ---
      // Private Data. Only the owner can read/write their library and details.
      match /data/{document=**} {
        allow read, write: if isOwner(userId);
      }

      // --- Subcollection: Friends ---
      match /friends/{friendId} {
        // 1. Owner Access: The user can see their own friends list, remove friends, etc.
        allow read, write: if isOwner(userId);

        // 2. Cross-User Access (Social Graph):
        // Allow ANOTHER user (friendId) to write into THIS user's (userId) friend list
        // IF the document ID matches their own UID.
        // This covers:
        // - Sending Request: User A writes to /users/B/friends/A
        // - Accepting Request: User A updates /users/B/friends/A
        allow create, update: if request.auth != null && request.auth.uid == friendId;
      }
    }
    // ==================== FEATURES ====================

    // FEEDBACK
    match /feedback/{feedbackId} {
      allow create: if true; // Guests can submit feedback
      allow read: if isAuthenticated(); // For now, all logged-in users can see feedback (temporary admin)
    }

    // WATCH PARTIES
    match /watchparties/{partyId} {
      allow read, create: if isAuthenticated();
      allow update: if isAuthenticated(); // Need checking participant vs host logic ideally, but keeping open for alpha
    }

    // ==================== USER DATA (Root Collections Strategy) ====================
    // Since we moved to root collections for easier querying in some contexts:
    
    match /libraries/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /gamification/{userId} {
      allow read: if isAuthenticated(); // Public for leaderboards
      allow write: if isOwner(userId);
    }
