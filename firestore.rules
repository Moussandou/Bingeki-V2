rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: User is authenticated and is the owner of the document path
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper: User is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId} {
      // Public Read: Allows Search and Leaderboard
      allow read: if isAuthenticated();
      
      // Write: Only owner can modify their root profile (XP, Level, Email, etc.)
      allow write: if isOwner(userId);

      // --- Subcollection: Data (Library & Gamification) ---
      // Read: Allowed for all authenticated users (needed for Social features like "Friends reading this")
      // Write: Only owner
      match /data/{document=**} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }

      // --- Subcollection: Friends ---
      match /friends/{friendId} {
        // 1. Owner Access: The user can see their own friends list, remove friends, etc.
        allow read, write: if isOwner(userId);

        // 2. Cross-User Access (Social Graph):
        // Allow ANOTHER user (friendId) to write into THIS user's (userId) friend list
        // IF the document ID matches their own UID.
        // This covers:
        // - Sending Request: User A writes to /users/B/friends/A
        // - Accepting Request: User A updates /users/B/friends/A
        allow create, update: if request.auth != null && request.auth.uid == friendId;
      }
    }
    // ==================== FEATURES ====================

    // FEEDBACK
    match /feedback/{feedbackId} {
      allow create: if true;
      allow read: if request.auth.token.email == 'moussandou.m@gmail.com';
    }

    // WATCH PARTIES
    match /watchparties/{partyId} {
      allow read, create: if isAuthenticated();
      allow update: if isAuthenticated();
    }

    // ACTIVITY FEED
    match /activities/{activityId} {
      allow create: if isAuthenticated(); // Users log their own activity
      allow read: if isAuthenticated();  // Friends read activities
    }

    // COMMENTS
    match /comments/{commentId} {
      allow create: if isAuthenticated();
      allow read: if true;
    }

    // CHALLENGES
    match /challenges/{challengeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated(); // Should be admin only ideally, but keeping open for alpha
    }

    // ==================== USER DATA (Root Collections Strategy) ====================
    // Rules for when data is accessed via root collections (if any) AND explicit subcollection overrides
    
    // Explicitly handle the 'data' subcollection for libraries and gamification
    // inside the /users/{userId} path is handled by the wildcard match /data/{document=**},
    // but we can make it explicit to be safe.
    
    match /libraries/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /gamification/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
  }
}
